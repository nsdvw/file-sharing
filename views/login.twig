{% extends "main.twig" %}

{% block title %}FileSharing &mdash; sign in{% endblock title %}
{% block head %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/login_form.css">
{% endblock head %}

{% block content %}

  <div class="container">
    <form action="/login" method="POST" name="login" class="form-horizontal">
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="email" name="login[email]"
          value="{{ loginForm.email|default('') }}" placeholder="email">
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password"
          name="login[password]" value="{{ loginForm.password|default('') }}"
          placeholder="password">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="login[remember]" checked> Remember me
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </div>

      {% if loginForm.errorMessage != '' %}
        <div class="alert alert-danger col-sm-offset-2 col-sm-10">
          {{ loginForm.errorMessage }}
        </div>
      {% endif %}
    </form>
  </div>

{% endblock content %}
